<?xml version="1.0" encoding="utf-8"?>
<com.bamboy.bimage.view.clickanimview.ClickAnimRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_image"
        android:layout_width="120dp"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="10dp"
        android:elevation="15px"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="10dp"
        android:layout_toRightOf="@+id/cv_image">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

    </RelativeLayout>

</com.bamboy.bimage.view.clickanimview.ClickAnimRelativeLayout>